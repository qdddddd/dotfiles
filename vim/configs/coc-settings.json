{
    "suggest.minTriggerInputLength": 2,
    "suggest.enablePreview": true,
    "suggest.echodocSupport": true,
    "suggest.languageSourcePriority": 1,
    "suggest.numberSelect": true,
    "suggest.snippetIndicator": "▸",

    "diagnostic.errorSign": "✗",
    "diagnostic.warningSign": "▲",
    "diagnostic.infoSign": "●",
    "diagnostic.hintSign": "◇",

    "list.nextKeymap": "<C-n>",
    "list.previousKeymap": "<C-p>",
    "list.normalMappings": {
        "d": "action:delete"
    },

    "coc.preferences.hoverTarget": "echo",

    "languageserver": {
        "clangd": {
            "command": "clangd",
            "args": [
                "-log=verbose",
                "-pretty",
                "-pch-storage=memory",
                "-function-arg-placeholders=1",
                "-header-insertion-decorators=1"
            ],
            "rootPatterns": [
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ]
        }
    }
}
